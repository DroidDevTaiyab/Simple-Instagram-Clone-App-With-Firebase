<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techpassmaster.simpleinstagramcloneapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.techpassmaster.simpleinstagramcloneapp.activity.VerifyPhoneActivity" />
        <activity android:name="com.techpassmaster.simpleinstagramcloneapp.activity.ResetPassword_Activity" />
        <activity android:name="com.techpassmaster.simpleinstagramcloneapp.activity.PhoneAuth_Activity" />
        <activity android:name="com.techpassmaster.simpleinstagramcloneapp.activity.EditProfile_Activity" />
        <activity android:name="com.techpassmaster.simpleinstagramcloneapp.tabs.post.PostActivity" />
        <activity android:name="com.techpassmaster.simpleinstagramcloneapp.auth.SignupActivity" />
        <activity android:name="com.techpassmaster.simpleinstagramcloneapp.activity.MainActivity" />
        <activity
            android:name="com.techpassmaster.simpleinstagramcloneapp.auth.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>